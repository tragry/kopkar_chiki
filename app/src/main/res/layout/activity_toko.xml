            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_toko_tittle"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:hint="Cari"
                android:drawableEnd="@drawable/ic_search"
                android:background="@drawable/roundedcorner">
            </EditText>


<!--            <ImageView-->
<!--                android:id="@+id/cari"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@drawable/ic_cari"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:padding="5dp"></ImageView>-->

            <HorizontalScrollView
                android:layout_width="330dp"
                android:layout_height="60dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/pengajuan_pinjaman"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_all_merah" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_makanan" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:src="@drawable/ic_wafer" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:src="@drawable/ic_minuman" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_soda" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/penarikan_simpanan"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_teh" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/perubahan_simpanan"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:src="@drawable/ic_mie" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/wishlist"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:src="@drawable/ic_sparepart" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_wishtoko"
                android:layout_gravity="center_horizontal">
            </ImageView>

